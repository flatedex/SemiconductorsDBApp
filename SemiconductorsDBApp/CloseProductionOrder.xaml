<Window x:Class="SemiconductorsDBApp.CloseProductionOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SemiconductorsDBApp"
        mc:Ignorable="d"
        Title="Close production order" Height="285" Width="460" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <TextBlock TextWrapping="Wrap" Text="Warehouse:" Margin="111,79,0,0" FontFamily="Arial" FontSize="14" HorizontalAlignment="Left" Width="83" Height="17" VerticalAlignment="Top"/>
        <ComboBox x:Name="SelectedWarehouse" Margin="0,77,110,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120" SelectedIndex="0" SelectionChanged="SelectedWarehouse_SelectionChanged"/>
        <Button x:Name="ConfirmBtn" Margin="0,178,0,0" Cursor="Hand" Height="43" VerticalAlignment="Top" HorizontalAlignment="Center" Width="140" FontFamily="Arial" FontSize="16" Click="ConfirmBtn_Click">
            <TextBlock TextAlignment="Center"><Run Text="Close order"/></TextBlock>
        </Button>
    </Grid>
</Window>
