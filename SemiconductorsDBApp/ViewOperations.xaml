<Window x:Class="SemiconductorsDBApp.ViewOperations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SemiconductorsDBApp"
        mc:Ignorable="d"
        Title="ViewOperations" Height="450" Width="800" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="Operations" HorizontalAlignment="Center" Width="780" Height="414" VerticalAlignment="Center" IsReadOnly="True" AutoGenerateColumns="False" SelectionMode="Single">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding title}" Header="Operation" Width="400"/>
            <DataGridTextColumn Binding="{Binding material}" Header="Material" Width="370"/>
        </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
