<Window x:Class="SemiconductorsDBApp.OpenProduction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SemiconductorsDBApp"
        mc:Ignorable="d"
        Title="Open production" Height="246" Width="323" Loaded="Window_Loaded" Closed="Window_Closed" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock TextWrapping="Wrap" Text="Material:" Margin="70,55,0,0" FontFamily="Arial" FontSize="14" HorizontalAlignment="Left" Width="68" Height="17" VerticalAlignment="Top" RenderTransformOrigin="0.516,-0.683"/>
        <ComboBox x:Name="SelectedMaterial" Margin="162,53,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" SelectedIndex="0"/>
        <Button x:Name="ConfirmBtn" Content="Confirm" HorizontalAlignment="Center" Margin="0,145,0,0" FontFamily="Arial" FontSize="14" Width="120" Click="ConfirmBtn_Click" Height="54" VerticalAlignment="Top"/>
    </Grid>
</Window>
